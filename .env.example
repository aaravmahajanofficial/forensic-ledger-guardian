# Forensic Ledger Guardian Environment Configuration
# Copy this file to .env.local and customize the values

# Application
VITE_APP_NAME="Forensic Ledger Guardian"
VITE_APP_VERSION="1.0.0"
VITE_DEBUG_MODE="false"
VITE_LOG_LEVEL="warn"

# Blockchain Configuration
VITE_ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/YOUR_PROJECT_ID"
VITE_CONTRACT_ADDRESS="0x0000000000000000000000000000000000000000"
VITE_CHAIN_ID="1"

# IPFS/Storage
VITE_IPFS_GATEWAY="https://ipfs.io/ipfs/"
VITE_HELIA_NODE_URL="https://your-ipfs-node.com"

# Security Configuration
VITE_ENCRYPTION_KEY_DERIVATION_ITERATIONS="100000"
VITE_SESSION_TIMEOUT="3600000"

# File Upload
VITE_MAX_FILE_SIZE="52428800"
VITE_SUPPORTED_FILE_TYPES="image/*,video/*,application/pdf,text/*"

# API Configuration
VITE_API_BASE_URL="/api"
VITE_API_TIMEOUT="30000"

# Development Only (set to false in production)
VITE_MOCK_AUTH="true"
VITE_MOCK_BLOCKCHAIN="true"

# Development Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# API Configuration (if using backend)
VITE_API_BASE_URL=http://localhost:3001/api
